{
    "name": "ember-syntax",
    "displayName": "Ember Syntax",
    "description": "Ember HTMLBars and Glimmer syntax highlighting",
    "version": "0.1.0",
    "publisher": "dhedgecock",
    "engines": {
        "vscode": "^1.10.0"
    },
    "categories": [
        "Languages"
    ],
    "icon": "icon.png",
    "bugs": {
        "url": "https://github.com/healthsparq/vscode-ember-syntax/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/healthsparq/vscode-ember-syntax"
    },
    "contributes": {
        "languages": [
            {
                "id": "handlebars",
                "aliases": [
                    "Glimmer",
                    "glimmer"
                ],
                "extensions": [
                    ".hbs"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "javascript",
                "aliases": [
                    "JavaScript (Babel+Glimmer)",
                    "javascript"
                ],
                "extensions": [
                    ".js"
                ],
                "configuration": "./javascript-language-configuration.json"
            },
            {
                "id": "typescript",
                "aliases": [
                    "TypeScript (Glimmer)",
                    "typescript"
                ],
                "extensions": [
                    ".ts"
                ],
                "configuration": "./javascript-language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "glimmer",
                "scopeName": "source.glimmer",
                "path": "./syntaxes/glimmer.tmLanguage.json"
            },
            {
                "language": "javascript",
                "scopeName": "source.js",
                "path": "./syntaxes/javascriptglimmer.tmLanguage.json",
                "embeddedLanguages": {
                    "meta.source.glimmer": "glimmer"
                }
            },
            {
                "language": "typescript",
                "scopeName": "source.ts",
                "path": "./syntaxes/typescriptglimmer.tmLanguage.json",
                "embeddedLanguages": {
                    "meta.source.glimmer": "glimmer"
                }
            }
        ]
    }
}
